<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', users_path  %></li>
      <li><%= link_to 'New', new_user_path %></li>
      <li class="active"><%= link_to 'Show', user_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Login:</b>
          <%= @user.login %>
        </p>

        <p>
          <b>Crypted_password:</b>
          <%= @user.crypted_password %>
        </p>

        <p>
          <b>Password_salt:</b>
          <%= @user.password_salt %>
        </p>

        <p>
          <b>Persistence_token:</b>
          <%= @user.persistence_token %>
        </p>

        <p>
          <b>Login_count:</b>
          <%= @user.login_count %>
        </p>

        <p>
          <b>Last_request_at:</b>
          <%= @user.last_request_at %>
        </p>

        <p>
          <b>Last_login_at:</b>
          <%= @user.last_login_at %>
        </p>

        <p>
          <b>Current_login_at:</b>
          <%= @user.current_login_at %>
        </p>

        <p>
          <b>Last_login_ip:</b>
          <%= @user.last_login_ip %>
        </p>

        <p>
          <b>Current_login_ip:</b>
          <%= @user.current_login_ip %>
        </p>

        <p>
          <b>Name:</b>
          <%= @user.name %>
        </p>

        <p>
          <b>Email:</b>
          <%= @user.email %>
        </p>
      <%= link_to 'Edit', edit_user_path(@user) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>