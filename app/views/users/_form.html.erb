<div class="block" id="block-signup">
  <h2>Enregistrement</h2>        
  <div class="content">
    <div class="flash">
      <%% flash.each do |type, message| -%>
      <div class="message <%%= type %>">
        <p><%%=  message %></p>
      </div>
      <%% end -%>
    </div>
      <div class="group">
        <div class="left">
         <%= f.label :login, "Login", :class => "label" %>
        </div>
        <div class="right">
          <%%= f.text_field :login, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
			<div class="group">
        <div class="left">
         <%= f.label :name, "Nom", :class => "label" %>
        </div>
        <div class="right">
          <%%= f.text_field :name, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <%= f.label :email, "Courriel", :class => "label" %>              
        </div>
        <div class="right">
          <%%= f.text_field :email, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <%= f.label :password, "Mot de passe",:class => "label" %>
        </div>
        <div class="right">
          <%%= f.password_field :password, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <%= f.label :password_confirmation, "Confirmation du mot de passe", :class => "label" %>
        </div>
        <div class="right">
          <%%= f.password_field :password_confirmation, :class => 'text_field' %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group navform">
        <input type="submit" class="button" value="Sauvegarder" />
      </div>
  </div>
</div>