<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', users_path %></li>
      <li><%= link_to 'Nouveau', new_user_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index des utilisateurs</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Login</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @users.each do |user| -%>
        <tr class='<%= cycle("even", "odd") %>'>
          <td>
            <%= user.id %>
          </td>
          <td>
            <%= user.login %>
          </td>
          <td>
            <%= user.created_at %>
          </td>
          <td class="last">
            <%= link_to 'Voir', user_path(user) %> |
            <%= link_to 'Édition', edit_user_path(user) %> |
            <%= link_to 'Détruire', user_path(user), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @user  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>