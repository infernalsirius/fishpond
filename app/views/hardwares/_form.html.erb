<fieldset>
	<legend>Ajout de matériel</legend>
	<%= form.label :idNum, "Numéro d'identification" %>
	<br />
	<%= form.text_field :idNum %>*
	<br />
	<%= form.label :maker, "Fabriquant" %>
	<br />
	<%= form.text_field :maker %>*
	<br />
	<%= form.label :mac, "Adresse MAC" %>
	<br />
	<%= form.text_field :mac %>
	<br />
	<%= form.label :model, "Modèle" %>
	<br />
	<%= form.text_field :model %>
	<br />
	<%= form.label :serial, "Numéro de série" %>
	<br />
	<%= form.text_field :serial %>*
	<br />
	<%= form.label :location_id, "Emplacement" %>
	<br>
	<%= form.collection_select :location_id, @locations, :id, :location, :prompt => "Sélectionner un emplacement" %>
	<br>
	<%= form.submit "Soumettre", :disable_with => 'Soumission...' %>
</fieldset>