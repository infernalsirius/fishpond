<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'Liste', hardwares_path  %></li>
      <li><%= link_to 'Nouveau', new_hardware_path %></li>
      <li class="active"><%= link_to 'Édition', edit_hardware_path %></li>
