<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', hardwares_path %></li>
      <li><%= link_to 'New', new_hardware_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Hardwares</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Idnum</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @hardwares.each do |hardware| -%>
        <tr>
          <td>
            <%= hardware.id %>
          </td>
          <td>
            <%= link_to hardware.idNum, hardware_path(hardware) %>
          </td>
          <td>
            <%= hardware.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', hardware_path(hardware) %> |
            <%= link_to 'edit', edit_hardware_path(hardware) %> |
            <%= link_to 'destroy', hardware_path(hardware), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @hardware  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>