<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', admin_permissions_path  %></li>
      <li><%= link_to 'New', new_admin_permission_path %></li>
      <li class="active"><%= link_to 'Edit', edit_admin_permission_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Permission</h2>
    <div class="inner">
      <% form_for @permission, :url => admin_permission_path(@permission), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>