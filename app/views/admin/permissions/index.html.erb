<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', admin_permissions_path %></li>
      <li><%= link_to 'New', new_admin_permission_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Permissions</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Name</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @permissions.each do |permission| -%>
        <tr>
          <td>
            <%= permission.id %>
          </td>
          <td>
            <%= link_to permission.name, admin_permission_path(permission) %>
          </td>
          <td>
            <%= permission.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', admin_permission_path(permission) %> |
            <%= link_to 'edit', edit_admin_permission_path(permission) %> |
            <%= link_to 'destroy', admin_permission_path(permission), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>