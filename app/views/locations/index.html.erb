<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', locations_path %></li>
      <li><%= link_to 'Nouveau', new_location_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index des emplacements</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Bâtiment</th>
          <th>Addresse</th>
					<th>Étage</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @locations.each do |location| -%>
        <tr>
          <td>
            <%= location.id %>
          </td>
          <td>
            <%= location.building %>
          </td>
					<td>
						<%= location.num %>
					</td>
					<td>
						<%= location.floor %>
					</td>
          <td class="last">
            <%= link_to 'edit', edit_location_path(location) %> |
            <%= link_to 'destroy', location_path(location), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @location  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>