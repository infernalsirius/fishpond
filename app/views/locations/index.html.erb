<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', locations_path %></li>
      <li><%= link_to 'New', new_location_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Locations</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Building</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @locations.each do |location| -%>
        <tr>
          <td>
            <%= location.id %>
          </td>
          <td>
            <%= link_to location.building, location_path(location) %>
          </td>
          <td>
            <%= location.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', location_path(location) %> |
            <%= link_to 'edit', edit_location_path(location) %> |
            <%= link_to 'destroy', location_path(location), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @location  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>