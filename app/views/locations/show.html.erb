<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', locations_path  %></li>
      <li><%= link_to 'New', new_location_path %></li>
      <li class="active"><%= link_to 'Show', location_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Building:</b>
          <%= @location.building %>
        </p>

        <p>
          <b>Num:</b>
          <%= @location.num %>
        </p>

        <p>
          <b>Floor:</b>
          <%= @location.floor %>
        </p>
      <%= link_to 'Edit', edit_location_path(@location) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>