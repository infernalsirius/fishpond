<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', accessories_path %></li>
      <li><%= link_to 'New', new_accessory_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Accessories</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Idnum</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @accessories.each do |accessory| -%>
        <tr>
          <td>
            <%= accessory.id %>
          </td>
          <td>
            <%= link_to accessory.idNum, accessory_path(accessory) %>
          </td>
          <td>
            <%= accessory.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', accessory_path(accessory) %> |
            <%= link_to 'edit', edit_accessory_path(accessory) %> |
            <%= link_to 'destroy', accessory_path(accessory), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @accessory  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>