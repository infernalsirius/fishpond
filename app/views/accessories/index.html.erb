<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', accessories_path %></li>
      <li><%= link_to 'Nouveau', new_accessory_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index des périphériques</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Numéro d'identification</th>
					<th>Fabriquant</th>
					<th>Modèle</th>
					<th>Diagonale</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @accessories.each do |accessory| -%>
        <tr class='<%= cycle("even", "odd") %>'>
          <td>
            <%= accessory.id %>
          </td>
					<td>
						<%= accessory.idNum %>
					</td>
					<td>
						<%= accessory.maker %>
					</td>
					<td>
						<%= accessory.model %>
					</td>
					<td>
						<%= accessory.diag %>
					</td>
          <td class="last">
            <%= link_to 'Voir', accessory_path(accessory) %> |
            <%= link_to 'Édition', edit_accessory_path(accessory) %> |
            <%= link_to 'Détruire', accessory_path(accessory), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @accessory  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>