<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', makers_path %></li>
      <li><%= link_to 'Nouveau', new_maker_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index du matériel</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					<th>Fabriquant</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @makers.each do |m| -%>
        <tr class='<%= cycle("even", "odd") %>'>
					<td><%= m.id %></td>
					<td><%= m.name %></td>
          <td class="last">          
						<%= link_to "Effacer", maker_path(m.id), :confirm => "Êtes-vous sûr?", :method => :delete %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @maker  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>