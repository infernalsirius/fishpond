<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', licenses_path %></li>
      <li>
				<%= link_to 'Nouveau', new_license_path %>
			</li>
			<li>
				<%= link_to "Liste complète (PDF)", licenses_path(@licenses, :format => 'pdf') %>
			</li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index des licenses</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th><%= order @search, :by => :software, :as  => "Logiciel", :html => {:classe => "white"} %></th>
          <th>Version</th>
					<th>Type</th>
					<th>Système d'exploitation</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @licenses.each do |license| -%>
        <tr class='<%= cycle("even", "odd") %>'>
          <td>
            <%= link_to license.software, license_path(license) %>
          </td>
					<td>
						<%= license.version %>
					</td>
					<td>
						<%= license.licenseType %>
					</td>
					<td>
						<%= license.operating_system.name %>
					</td>
          <td class="last">
            <%= link_to 'Voir', license_path(license) %> |
            <%= link_to 'Édition', edit_license_path(license) %> |
						<%= link_to "Dupliquer", clonage_license_path(license) %> |
            <%= link_to 'Détruire', license_path(license), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @license  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => "sidebar") %>