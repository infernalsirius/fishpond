<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', licenses_path %></li>
      <li><%= link_to 'Nouveau', new_license_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index des licenses</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Logiciel</th>
          <th>Version</th>
					<th>Langue</th>
					<th>Numéro de série</th>	
					<th>Type</th>
					<th>Système d'exploitation</th>
					<th>Utilisateur</th>
					<th>Nombre de licenses</th>
					<th>Nombre installées</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @licenses.each do |license| -%>
        <tr>
          <td>
            <%= license.id %>
          </td>
          <td>
            <%= link_to license.software, license_path(license) %>
          </td>
					<td>
						<%= license.version %>
					</td>
					<td>
						<%= license.language %>
					</td>
					<td>
						<%= license.serial %>
					</td>
					<td>
						<%= license.type %>
					</td>
					<td>
						<%= license.os %>
					</td>
					<td>
						<%= license.user %>
					</td>
					<td>
						<%= license.numLicense %>
					</td>
					<td>
						<%= license.numInstalled %>
					</td>
          <td class="last">
            <%= link_to 'Voir', license_path(license) %> |
            <%= link_to 'Édition', edit_license_path(license) %> |
            <%= link_to 'Détruire', license_path(license), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @license  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>