<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', licenses_path %></li>
      <li><%= link_to 'New', new_license_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Licenses</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Software</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @licenses.each do |license| -%>
        <tr>
          <td>
            <%= license.id %>
          </td>
          <td>
            <%= link_to license.software, license_path(license) %>
          </td>
          <td>
            <%= license.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', license_path(license) %> |
            <%= link_to 'edit', edit_license_path(license) %> |
            <%= link_to 'destroy', license_path(license), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @license  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>