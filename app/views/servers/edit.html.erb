<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'Liste', servers_path  %></li>
      <li><%= link_to 'Nouveau', new_server_path %></li>
      <li class="active"><%= link_to 'Édition', edit_server_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Édition serveur</h2>
    <div class="inner">
      <% form_for @server, :url => server_path(@server), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>