<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', servers_path  %></li>
      <li><%= link_to 'New', new_server_path %></li>
      <li class="active"><%= link_to 'Edit', edit_server_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title">Edit Server</h2>
    <div class="inner">
      <% form_for @server, :url => server_path(@server), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>