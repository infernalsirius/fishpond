<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', servers_path %></li>
      <li><%= link_to 'New', new_server_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Servers</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Usage</th>
          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @servers.each do |server| -%>
        <tr>
          <td>
            <%= server.id %>
          </td>
          <td>
            <%= link_to server.usage, server_path(server) %>
          </td>
          <td>
            <%= server.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', server_path(server) %> |
            <%= link_to 'edit', edit_server_path(server) %> |
            <%= link_to 'destroy', server_path(server), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @server  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>