<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', servers_path %></li>
      <li><%= link_to 'Nouveau', new_server_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Index des serveurs</h2>
    <div class="inner">
      <table class="table">
        <tr>             
					<th class="first"><%= order @search, :by => :servName, :as => "Nom" %></th>
          <th><%= order @search, :by => :maker_name, :as  => "Fabriquant" %></th>
					<th><%= order @search, :by => :department_name, :as => "Département"  %></th>
					
          <th class="last">&nbsp;</th>
        </tr>
        <% @servers.each do |server| -%>
        <tr class='<%= cycle("even", "odd") %>'>
					<td><%= link_to server.servName, server_path(server) %></td>
					<td><%= server.maker.name %></td>
          <td><%= server.usage %></td>
          <td class="last">
            <%= link_to 'Voir', server_path(server) %> |
            <%= link_to 'Édition', edit_server_path(server) %> |
            <%= link_to 'Détruire', server_path(server), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @server  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>