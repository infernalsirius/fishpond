<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'Liste', servers_path %></li>
      <li><%= link_to 'Nouveau', new_server_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Liste des serveurs</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>Nom</th>
          <th>Fabriquant</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @servers.each do |server| -%>
        <tr>
          <td><%= server.id %></td>
					<td><%= server.servName %></td>
					<td><%= server.privIp %></td>
          <td><%= link_to server.usage, server_path(server) %></td>
          <td>
            <%= server.created_at %>
          </td>
          <td class="last">
            <%= link_to 'Voir', server_path(server) %> |
            <%= link_to 'Édition', edit_server_path(server) %> |
            <%= link_to 'Détruire', server_path(server), :method => :delete, :confirm => 'Êtes-vous sûr?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <%= will_paginate @server  %>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>