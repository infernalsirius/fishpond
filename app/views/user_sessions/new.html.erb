<div class="block" id="block-login">
  <h2>Login Box</h2>        
  <div class="content login">
    <div class="flash">
      <% flash.each do |type, message| -%>
      <div class="message <%%= type %>">
        <p><%=  message %></p>
      </div>
      <% end -%>
    </div>
    <% form_for @user_session, :url => user_session_path, :html => {:class => 'form login'} do |f| -%>
      <div class="group">
        <div class="left">
          <%= f.label :login,"Login", :class => :label %>
        </div>
        <div class="right">
          <%= f.text_field :login, :class => :text_field %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group">
        <div class="left">
          <%= f.label :password,"Mot de passe", :class => :label %>
        </div>
        <div class="right">
          <%= f.text_field :password, :class => :text_field %>
        </div>              
        <div class="clear"></div>
      </div>
			<div class="group">
        <div class="left">
          <%= f.label :remember_me,"Rappelle toi de moi", :class => :label %>
        </div>
        <div class="right">
          <%= f.check_box :remember_me %>
        </div>              
        <div class="clear"></div>
      </div>
      <div class="group navform">
        <div class="right">
        	<%= f.submit "Soumettre", :disable_with => 'Soumettre...' %>
        </div>
        <div class="clear"></div>
      </div>            
    <% end -%>
  </div>
</div>